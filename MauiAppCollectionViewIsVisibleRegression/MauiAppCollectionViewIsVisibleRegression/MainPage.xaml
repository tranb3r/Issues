<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAppCollectionViewIsVisibleRegression.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <CollectionView x:Name="CollectionViewRef" IsVisible="False">

        <CollectionView.ItemTemplate>
            <DataTemplate>

                <ContentView Margin="5,0">
                    <Border StrokeShape="RoundRectangle 10">
                        <Grid Margin="15" RowDefinitions="Auto">
                            <Label Grid.Row="0" Text="{Binding ., Mode=OneWay}" />
                        </Grid>
                    </Border>
                </ContentView>

            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>

</ContentPage>
